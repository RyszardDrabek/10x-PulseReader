---
import GlobalLayout from "../layouts/GlobalLayout.astro";
---

<GlobalLayout title="Settings - PulseReader">
  <div class="min-h-screen bg-background">
    <main class="container mx-auto px-4 py-8 max-w-2xl">
      <div class="space-y-8">
        <div class="space-y-2">
          <h1 class="text-3xl font-bold">Settings</h1>
          <p class="text-muted-foreground">
            Customize your news feed preferences to get the most relevant content.
          </p>
        </div>

        <!-- Settings Form will be rendered here by React -->
        <div id="settings-form" class="space-y-8"></div>
      </div>
    </main>
  </div>

  <script client:load>
    import React from "react";
    import { createRoot } from "react-dom/client";
    import SettingsForm from "../components/SettingsForm";

    const container = document.getElementById("settings-form");
    if (container) {
      const root = createRoot(container);
      root.render(React.createElement(SettingsForm));
    }
  </script>
</GlobalLayout>
